@model TodoAppMvc.Models.Todo

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-4">
    <h1 class="text-center text-danger">Delete Todo</h1>

    <h3 class="text-warning">Are you sure you want to delete this?</h3>
    <div class="card shadow bg-light rounded">
        <div class="card-body">
            <h4 class="text-secondary">Todo Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Task)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Task)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsComplete)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsComplete)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DueDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DueDate)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
            <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
        </form>
    </div>
</div>
